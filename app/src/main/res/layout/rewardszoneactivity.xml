<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:id="@+id/relative2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Momark Rewards"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/textView4"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text=""
            android:background="@drawable/icon"
            android:id="@+id/button2"
            android:layout_marginLeft="326dp"
            android:layout_marginTop="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text=""
            android:background="@drawable/back"
            android:id="@+id/button3"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#0099FF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Outlets near You"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Displays outlets around your current location"
            android:id="@+id/textView10"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_marginTop="130dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:background="@drawable/p1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:layout_marginLeft="75dp"
            android:background="@drawable/p5"
            />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:id="@+id/imageView4"
            android:layout_marginLeft="150dp"
            android:background="@drawable/p2"
            />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:layout_marginLeft="225dp"
            android:background="@drawable/p3"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:layout_marginLeft="301dp"
            android:background="@drawable/p4"
            />





    </RelativeLayout>


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:choiceMode="singleChoice"

        android:divider="@android:color/background_dark"
        android:dividerHeight="1dp"
        android:background="@android:color/darker_gray"/>


</android.support.v4.widget.DrawerLayout>
