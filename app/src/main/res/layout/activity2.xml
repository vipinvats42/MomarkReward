<?xml version="1.0" encoding="utf-8"?>



    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#900000"
        android:id="@+id/relative2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Momark Rewards"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/textView4"
           android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text=""
            android:background="@drawable/icon"
            android:id="@+id/button2"
            android:layout_marginLeft="326dp"
            android:layout_marginTop="3dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text=""
            android:background="@drawable/noti"
            android:id="@+id/button3"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:id="@+id/relative3"
       android:layout_marginTop="40dp"
        android:background="#000000">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_marginTop="0dp"
            android:layout_height="220dp"
            android:id="@+id/imageView"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="330dp"
       android:layout_marginTop="250dp"
        android:background="@drawable/momark_bg"
        android:id="@+id/relative4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/button4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp"
            android:background="@drawable/search_icon"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/check"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="185dp"
            android:background="@drawable/events_icon"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/button7"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="280dp"
            android:background="@drawable/other"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20dp"
            android:textColor="#900000"
            android:id="@+id/textView5"
            android:layout_below="@+id/button4"
            android:layout_marginLeft="10dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check In"
            android:textSize="20dp"
            android:textColor="#900000"
            android:id="@+id/textView6"
            android:layout_below="@+id/button4"
            android:layout_marginLeft="92dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Events"
            android:textSize="20dp"
            android:textColor="#900000"
            android:id="@+id/textView7"
            android:layout_below="@+id/button4"
            android:layout_marginLeft="197dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers"
            android:textSize="20dp"
            android:textColor="#900000"
            android:id="@+id/textView8"
            android:layout_below="@+id/button4"
            android:layout_marginLeft="292dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""

            android:id="@+id/button8"
            android:background="@drawable/reward_btun"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="50dp"/>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
     android:layout_marginTop="600dp"

        android:id="@+id/relative5">

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/relative6"
            android:background="#900000"
            android:layout_marginLeft="0dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text=""
                android:gravity="center"
                android:id="@+id/button9"
                android:background="@drawable/signin"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/relative7"
            android:layout_marginLeft="200dp"
            android:background="#900000">

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text=""
                android:gravity="center"
                android:id="@+id/button10"
                android:background="@drawable/register_icon"/>
        </RelativeLayout>




    </RelativeLayout>








        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ListView android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:choiceMode="singleChoice"

            android:divider="@android:color/background_dark"
            android:dividerHeight="1dp"
            android:background="@android:color/darker_gray"/>








    </android.support.v4.widget.DrawerLayout>







